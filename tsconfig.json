{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./dist",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "ESNext"
    }
  },
  "include": ["src", "examples"],
  "exclude": ["node_modules", "dist"]
}
